" set calls
set nocompatible
set nu rnu
set cursorline
set cursorcolumn
set shiftwidth=4
set tabstop=4
set expandtab
set nobackup
set incsearch
set showcmd
set showmode
set showmatch
set hlsearch
set termguicolors

" misc calls
colorscheme catppuccin_mocha
syntax on 
filetype on
filetype plugin on
filetype indent on


" remaps
nnoremap ; :

